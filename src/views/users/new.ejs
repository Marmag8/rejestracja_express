<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= Title %></title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('../partials/header') %>

    <main>
        <h1>Utwórz konto</h1>

        <% if (errors && errors.length > 0) { %>
            <div class="errors">
                <ul>
                    <% errors.forEach(function(error) { %>
                        <li><%= error.msg %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>

        <form action="/users" method="POST">
            <div>
                <label for="username">Nazwa użytkownika:</label>
                <input type="text" id="username" name="username" value="<%= values.username %>" required>
            </div>
            <div>
                <label for="age">Wiek:</label>
                <input type="number" id="age" name="age" value="<%= values.age %>" min="1" required>
            </div>
            <div>
                <label for="mail">Adres e-mail:</label>
                <input type="email" id="mail" name="mail" value="<%= values.mail %>" required>
            </div>
            <div>
                <label for="password">Hasło:</label>
                <input type="password" id="password" name="password" value="<%= values.password %>" required>
            </div>
            <button type="submit">Utwórz</button>
        </form>
    </main>

    <%- include('../partials/footer') %>
</body>